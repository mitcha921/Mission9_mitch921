@page
@model Mission9_mitch921.Pages.AddToCartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.cart.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>$@i.Book.Price</td>
            <td>$@(i.Quantity * i.Book.Price)</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> Total: </td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    @*Book icon added*@
<a class="btn btn-primary" href="@Model.ReturnUrl"><i class="bi bi-book"></i> Continue Shopping</a>
</div>
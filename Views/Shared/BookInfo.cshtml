@{
}

@model Book

<div class="row">
    <div class="col-md-4">
        <h3 class="text-primary font-weight-bold">@Model.Title</h3>
        <p class="text-muted"><span class="font-weight-bold">by </span> @Model.Author <br /> <span class="font-weight-bold">Publisher:</span> @Model.Publisher</p>
        <p class="mb-1"><span class="font-weight-bold">Price:</span> $@Model.Price</p>
        <form method="post" asp-page="/AddToCart">

            <input type="hidden" asp-for="@Model.BookId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

            <span class="card-text">
                <button type="submit" class="btn btn-success btn-sm flot-end"><i class="bi bi-plus"></i> Add to Cart</button>
            </span>
        </form>
    </div>
    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item"><span class="font-weight-bold">ISBN:</span> @Model.Isbn</li>
            <li class="list-group-item"><span class="font-weight-bold">Classification:</span> @Model.Classification</li>
            <li class="list-group-item"><span class="font-weight-bold">Category:</span> @Model.Category</li>
            <li class="list-group-item"><span class="font-weight-bold">Page Count:</span> @Model.PageCount</li>
        </ul>
    </div>
</div>
<hr />